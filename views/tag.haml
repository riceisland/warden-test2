%div{:id => "comments_"+ @content[:id],:class => "tags clear"}
	%hr
	%div{:class => "comment_total", :id => "comment_total_"+ @content[:id]}= "発見＆コメント (" + @content[:comment].length.to_s + ")"
	-@content[:comment].each do |elem|
		%div{:class => "comment"}
			%div{:class => "comment_text"}= elem[:comment]
			%div{:class => "comment_time"}= elem[:time]
%div{:class => "comment_form", :id => "comment_form_"+ @content[:id]}
	%form{:class => "comment_form pure-form",  :'data-ajax' => "false"}
		%input{:type => "text", :name => "comment", :placeholder => "コメントがあればこちらに入力してください"}
		%input{:type => "hidden", :name => "data_id", :value => @content[:id]}
		%button{:type => "submit", :class => "pure-button notice"}発見!