%div{:id => @content[:rand_note_id], :class =>"pin evernote"}
	%form{:class => "individual", :method => "post", :action => "/individual"}
		%input{:type => "hidden", :name => "evernote_data_id", :value => @content[:rand_note_id]}
	%div{:id => "snippet"}
		%div{:id => "title"}= @content[:note_title]
		%div{:id => "body"}
			= @content[:snippet]
	%span{:id => "viewall"} ViewAllâ†’
	%div{:class => "modal hide fade", :id => "allcontent" , :tabindex => "-1", :role => "dialog", :'aria-labelledby' => "ModalLabel", :'aria-hidden' => "true"}
		%div{:class => "modal-header"}
			%button{:type =>"button", :class =>"close", :'data-dismiss' => "modal", :'aria-hidden' => "true"}x
			%h3{:id => "ModalLabel"}= @content[:note_title]
		%div{:class => "modal-body"}
			%div= @content[:content]
		%div{:class => "modal-footer"}
			%a{:href => @link, :class =>"btn", :target => "_blank"}Edit
			%button{:class =>"btn", :'data-dismiss' => "modal", :'aria-hidden' => "true"}Close
	%div{:class => "evernote_tags"}
		%div{:class => "view"}
			%div{:class => "evernote_tags_view"}
				-@content[:evernote_tag_array].each do |elem|
					%a{:href => "/" + elem + "/1", :class => "tag"}= elem
			%span{:id => "evernote_edit_open", :class => "evernote_edit_toggle edit_toggle"}
				%i{:class => "icon-edit"}
		%div{:class => "edit", :id => "evernote_edit"}
			%p Tag Edit
			%form{:class => "evernote_edit_form"}
				%input{:type => "text", :name => "evernote_tag_edit", :value => @content[:evernote_tag_concat]}
				%input{:type => "hidden", :name => "data_id", :value => @content[:rand_note_id]}
				%button{:type => "submit", :class => "btn"}
					%i{:class => "icon-share-alt"}
				%span{:id => "evernote_edit_close", :class => "btn evernote_edit_toggle"}
					%i{:class => "icon-remove"}
	%form{:class => "evernote_ref_form"}
		%input{:type => "hidden", :name => "evernote_data_id", :value => @content[:rand_note_id]}
		%input{:type => "hidden", :name => "ref_count", :value => @content[:evernote_ref_count]}
		%button{:type => "submit", :class => "btn"}
			%i{:class => "icon-star"}
		%span{:class => "evernote_ref_count"}= @content[:evernote_ref_count]